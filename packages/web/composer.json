{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "hardimpactdev/orbit-web",
  "type": "project",
  "description": "Web dashboard for managing local development environments powered by Orbit CLI.",
  "keywords": [
    "orbit",
    "laravel",
    "development",
    "docker",
    "dashboard"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Nick Retel",
      "email": "nick@hardimpact.dev",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.4",
    "hardimpactdev/orbit-app": "^0.1",
    "laravel/framework": "^12.0",
    "laravel/horizon": "^5.43",
    "laravel/reverb": "^1.7",
    "laravel/tinker": "^2.10.1"
  },
  "require-dev": {
    "fakerphp/faker": "^1.23",
    "larastan/larastan": "^3.0",
    "laravel/pail": "^1.2.2",
    "laravel/pint": "^1.25",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.6",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "projektgopher/whisky": "^0.7.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "@php artisan vendor:publish --tag=orbit-assets --ansi --force",
      "@php -r 'if (!getenv(\"CI\")) { exec(\"vendor/bin/whisky update\"); }'"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "post-install-cmd": [
      "@php artisan vendor:publish --tag=orbit-assets --ansi --force",
      "@php -r 'if (!getenv(\"CI\")) { exec(\"vendor/bin/whisky update\"); }'"
    ],
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "format": "vendor/bin/pint"
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "path",
      "url": "../app",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "../core",
      "options": {
        "symlink": true
      }
    }
  ]
}
