# Orbit Desktop - Environment Configuration
# Copy to .env and run: php artisan key:generate

APP_NAME=OrbitDesktop
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database - shared with CLI and bundled web app
# Default: ~/.config/orbit/database.sqlite
DB_CONNECTION=sqlite
# DB_DATABASE=/custom/path/to/database.sqlite

# NativePHP Configuration
NATIVEPHP_APP_ID=com.orbit.desktop
# NATIVEPHP_APP_VERSION=1.0.0
# NATIVEPHP_APP_AUTHOR=
# NATIVEPHP_APP_COPYRIGHT=
