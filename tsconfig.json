{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./resources/js/*"],
            "@routes/*": ["./resources/js/routes/*"],
            "@actions/*": ["./resources/js/actions/*"]
        },
        "types": ["vite/client", "./resources/js/types"]
    },
    "include": ["resources/js/**/*", "resources/js/**/*.vue"],
    "exclude": ["node_modules"]
}
