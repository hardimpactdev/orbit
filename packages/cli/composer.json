{
    "name": "hardimpactdev/orbit-cli",
    "description": "Local PHP development environment with host PHP-FPM/Caddy and Docker services",
    "keywords": ["php", "php-fpm", "caddy", "docker", "development", "local", "cli"],
    "homepage": "https://github.com/hardimpactdev/orbit-cli",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Nick Retel",
            "email": "nick@hardimpact.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.10",
        "hardimpactdev/orbit-core": "^0.1.0",
        "illuminate/http": "^12.45",
        "illuminate/log": "^12.0",
        "laravel-zero/framework": "^12.0.2",
        "laravel-zero/phar-updater": "^1.4",
        "pusher/pusher-php-server": "^7.2"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.25.1",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^4.0",
        "projektgopher/whisky": "^0.7.4",
        "rector/rector": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r 'if (!getenv(\"CI\")) { exec(\"vendor/bin/whisky update\"); }'"
        ],
        "post-update-cmd": [
            "@php -r 'if (!getenv(\"CI\")) { exec(\"vendor/bin/whisky update\"); }'"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "format": "vendor/bin/pint"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "inertiajs/inertia-laravel"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["orbit"]
}
